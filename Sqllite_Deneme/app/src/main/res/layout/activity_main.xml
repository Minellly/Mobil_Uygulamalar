<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="Ad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextSoyad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        android:text="Soyad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAd" />

    <EditText
        android:id="@+id/editTextYas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        android:text="Yas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSoyad" />

    <EditText
        android:id="@+id/editTextSehir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        android:text="Sehir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextYas" />

    <Button
        android:id="@+id/buttonKayit"
        android:layout_width="235dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:text="Kayıt ekle"
        app:layout_constraintTop_toBottomOf="@+id/editTextSehir"
        tools:layout_editor_absoluteX="9dp" />

    <Button
        android:id="@+id/buttonGoster"
        android:layout_width="241dp"
        android:layout_height="54dp"
        android:layout_marginTop="4dp"
        android:text="Kayıt göster"
        app:layout_constraintTop_toBottomOf="@+id/buttonKayit"
        tools:layout_editor_absoluteX="10dp" />

    <Button
        android:id="@+id/buttonSil"
        android:layout_width="248dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:text="Kayıt sil"
        app:layout_constraintTop_toBottomOf="@+id/buttonGoster"
        tools:layout_editor_absoluteX="9dp" />

    <Button
        android:id="@+id/buttonGuncelle"
        android:layout_width="246dp"
        android:layout_height="47dp"
        android:layout_marginTop="4dp"
        android:text="Kayıt güncelle"
        app:layout_constraintTop_toBottomOf="@+id/buttonSil"
        tools:layout_editor_absoluteX="9dp" />

    <TextView
        android:id="@+id/textViewBilgiler"
        android:layout_width="268dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonGuncelle"
        tools:layout_editor_absoluteX="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>